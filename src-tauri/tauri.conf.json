{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pentimento",
  "version": "0.1.0",
  "identifier": "com.pentimento.app",
  "build": {
    "frontendDist": "../dist/ui",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Pentimento",
        "width": 1920,
        "height": 1080,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": []
  }
}
